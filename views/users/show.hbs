<div class="stepper">
    <a href="/users">Home</a> / Profile
</div>

<div class="personPage">
    <div class="personHeader">
        <h2>{{user.name}}'s page</h2>
        <a href="/users">other users</a>
        <a class="stores" href="/users/{{user._id}}/effects/new">new effect</a>
        <a href="/users/{{user._id}}/effects">{{user.username}}'s effects</a>
        <a class="connections" href="/users/{{user._id}}/effects/{{effect._id}}/connections">{{user.username}}'s connections</a>
    </div>
    <div class="connections">
        {{#each effect.connections}}
        <div class="gift">
            <a href="/users/{{../userId}}/effects/{{../effect._id}}/connections/{{this._id}}">
                {{this.title}}
            </a>
        </div>
        {{/each}}
    </div>

</div>